<%- include('common/head.ejs')-%>

   <title>Admin Panel - Edit Civil Event</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:1700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">



                 <!-- put your contente -->
                 <h1 class="mb-2 mt-2">Edit Civil Event</h1>
    
                 <form method="post" action="/civildepartment/edit-civildepartment/<%=x.eventcivilname%>?_method=put" enctype="multipart/form-data">
             
                 
                   <div class="mb-3 mt-3 row g-9 align-items-center">
                     <div class="col col-lg-2"><label class="form-label">Navbar</label></div>
                     <div class="col"><textarea rows="10" class="editor form-control Page_Details" id="editor" name="eventcivilnav" placeholder="Event Nav"><%=x.eventcivilnav %></textarea></div>
                   </div>
                  <div class="mb-3 mt-3 row g-9 align-items-center"> 
                   <div class="col col-lg-2"><label class="form-label">Event Photo</label></div>
                   <div class="col"><input type="file" name="eventcivilphoto" class="form-control" value="<%=x.eventcivilphoto %>" placeholder="select image!" ></div>
                 </div>
                 <div class="mb-3 mt-3 row g-9 align-items-center">  
                     <div class="col col-lg-2"><label class="form-label">Event Name</label></div>
                     <div class="col"><input type="text" name ="eventcivilname" class="form-control" value="<%=x.eventcivilname %>" placeholder="Event Title" ></div>
                   </div>

                   <div class="mb-3 mt-3 row g-9 align-items-center">  
                     <div class="col col-lg-2"><label class="form-label">Event Date</label></div>
                     <div class="col"><input type="date" name ="eventcivildate" class="form-control" value="<%=x.eventcivildate %>" placeholder="Event Date" ></div>
                   </div>
                   <div class="mb-3 mt-3 row g-9 align-items-center">  
                     <div class="col col-lg-2"><label class="form-label">Event Resource Person</label></div>
                     <div class="col"><input type="text" name ="eventcivilperson" class="form-control" value="<%=x.eventcivilperson %>" placeholder="Event Resourse Person" ></div>
                   </div>
                 <div class="mb-3 mt-3 row g-9 align-items-center">
                   <div class="col col-lg-2"><label class="form-label">Event Description</label></div>
                   <div class="col"><textarea rows="4" class="form-control"  name="eventcivildesc"value="<%=x.eventcivildesc %>" placeholder="Event Details"></textarea></div>
                 </div>
                
             
                   <div class="mb-5 mt-3 align-items-center text-center"> 
                        <button type="submit" class="btn btn-primary">Submit</button>
                   </div>
               </form>

            <!-- end your content here -->




             </div>
            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      