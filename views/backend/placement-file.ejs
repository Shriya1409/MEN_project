<%- include('common/head.ejs')-%>

   <title>Admin Panel - Pages</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your content -->

               <h1>All Pages</h1>
            
               
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Photo</th>
                        <th>Page URL</th>
                        <th>Navigation</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Keyword</th>
                        <th>Page Heading</th>
                        <th>Page Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%navdata.forEach((y)=>{%>
                     <tr>
                        <td>
                          <% if(y.plcmtPhoto){ %>
                              <img src="/backend/placements/<%= y.plcmtPhoto%>" width="100">
                          <% } else { %>
                              <img src="/backend/images/no_image.jpg" width="100">
                          <% } %>
                          </td>
                        <td><%= y.plcmtUrl%></td>
                        <td><%=y.plcmtNavText%></td>
                        <td><%=y.plcmtTitle%></td>
                        <td> <%=y.plcmtMetaDescription%></td>
                        <td> <%=y.plcmtMetaKeyword%></td>
                        <td> <%=y.plcmtHeading%></td>
                        <td> <%=y.plcmtDetails.slice(0,20)%></td>
                        
                        <td>  <a class="btn btn-primary" href="/placement/edit-placement/<%= y.plcmtUrl%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/placement/delete-placement/<%= y.plcmtUrl%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                        </td>
                     </tr>
                     <%navdata})%>
                    
                  </tbody>
               </table>
                 

                 <center> <br> <a class="btn btn-success btn-md" href="/add-placement/">Add More Pages</a> </center>
       

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      