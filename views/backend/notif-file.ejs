<%- include('common/head.ejs')-%>

   <title>Admin Panel - Notifications</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your contente -->

               <h1>All Notifications</h1>
            
               
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Date</th>
                        <th>Notice Name</th>
                        <th>Notice File</th>
                        <th>Edit</th>
                        <th>Delete</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%x.forEach((y)=>{%>
                     <tr>
                      
                        <td><%= y.date%></td>
                        <td><%=y.noticename%></td>
                        <td><a href="<%=y.noticeinfo%>">View PDF</a></td> 
                        
                        <td>  <a class="btn btn-primary" href="/notifications/edit-notifications/<%= y.date%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/notifications/delete-notifications/<%= y.date%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                           </form>
                        </td>
                     </tr>
                     <%x})%>
                    
                  </tbody>
               </table>
                     
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                   <tr>
                      <th>Date</th>
                      <th>Useful InfoName</th>
                      <th>Useful InfoFile</th>
                      <th>Edit</th>
                      <th>Delete</th>
                   </tr>
                </thead>
                <tbody>
                   <%x.forEach((y)=>{%>
                   <tr>
                    
                      <td><%= y.date%></td>
                      <td><%=y.usefulinfoname%></td>
                      <td><a href="<%=y.usefulinfo%>">View PDF</a></td>  
                      
                      <td>  <a class="btn btn-primary" href="/notifications/edit-notifications/<%= y.date%>">Edit</a>    </td>                  
                      <td>  <form style="display: inline;" action="/notifications/delete-notifications/<%= y.date%>/?_method=DELETE" method="POST">
                            <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                         </form>
                      </td>
                   </tr>
                   <%x})%>
                  
                </tbody>
             </table>

                 <center> <br> <a class="btn btn-success btn-md" href="/add-notifications/">Add More Notifications</a> </center>
       

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      