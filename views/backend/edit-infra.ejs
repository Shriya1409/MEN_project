    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">
              <div class="dashboard-content-area">

                   <!-- put your contente -->
                   <h1 class="mb-2 mt-2">Add Infrastructure Details</h1>


                   <!-- <div>
                     <div class="col col-lg-2"><select name="department" id="department" class="form-label">Select your department</select></div> -->
                   <!-- <option value= "it" id="it">IT</option>
                   <option value="comp" id="comp">Comp</option>
