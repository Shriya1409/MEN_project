                   <form method="post" action="/infra/edit-infra/<%=x.infradepturl%>?_method=put" enctype="multipart/form-data">
                    
                    <div class="mb-3 mt-3 row g-9 align-items-center">  
                      <div class="col col-lg-2"><label class="form-label">Infrastructure Page URL</label></div>
                      <div class="col"><input type="text" name ="infradepturl" class="form-control" value="<%=x.infradepturl %>" placeholder="infra dept url" required></div>
                    </div>

                    <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Nav Display Text</label></div>
                       <div class="col"><input type="text" name ="infradeptnavtext" class="form-control" value="<%=x.infradeptnavtext %>" placeholder="Navigation Display Text" required></div>
                     </div>

                     <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Page Title</label></div>
                       <div class="col"><input type="text" name ="infradepttitle" class="form-control" value="<%=x.infradepttitle %>" placeholder="Your Page Title" required></div>
                     </div>
                     <div class="mb-3 mt-3 row g-9 align-items-center">
                      <div class="col col-lg-2"><label class="form-label">Navbar</label></div>
                      <div class="col"><textarea rows="10" class="editor form-control Page_Details" id="editor" name="infranav" placeholder="Infra Nav"><%=x.infranav %></textarea></div>
                    </div>
                    <div class="mb-3 mt-3 row g-9 align-items-center"> 
                      <div class="col col-lg-2"><label class="form-label">Infrastructure Photos</label></div>
                      <div class="col"><input type="file" name="infradeptphoto" class="form-control" value="<%=x.infradeptphoto %>" multiple></div>
                    </div>
                    <div class="mb-3 mt-3 row g-9 align-items-center">
                      <div class="col col-lg-2"><label class="form-label">About Us Container</label></div>
                      <div class="col"><textarea rows="5" class="form-control"  name="infradeptabout" value="<%=x.infradeptabout%>" placeholder="Enter Details"></textarea></div>
                    </div>
                    <div class="mb-5 mt-3 align-items-center text-center"> 
                         <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                
              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
