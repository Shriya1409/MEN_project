<%- include('common/head.ejs')-%>

   <title>Admin Panel - Mech Events</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:1700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>

            <div class="col-lg-10">
 <center> <br> <a class="btn btn-success btn-md" href="/add-mechdepartment/">Add More Events</a> </center>
              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your contente -->

               <h1>All Events</h1>
            
               
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Event Name</th>
                        <th>Event Date</th>
                        <th>Event Resource Person</th>
                        <th>Event Description</th>
                        <th>Edit</th>
                        <th>Delete</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%x.forEach((y)=>{%>
                     <tr>
                       
                        <td><%= y.eventmechname%></td>
                        <td><%=y.eventmechdate%></td>
                        <td><%=y.eventmechperson%></td>
                        <td><%= y.eventmechdesc%></td>
                        
                        <td>  <a class="btn btn-primary" href="/mechdepartment/edit-mechdepartment/<%= y.eventmechname%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/mechdepartment/delete-mechdepartment/<%= y.eventmechname%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                           </form>
                        </td>
                     </tr>
                     <%x})%>
                    
                  </tbody>
               </table>
                 

                
       

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      