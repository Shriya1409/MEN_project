<%- include('common/head.ejs')-%>

   <title>Edit faculty</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">
              <div class="dashboard-content-area">

                   <!-- put your contente -->
                   <h1 class="mb-2 mt-2">Edit Record</h1>
    
                   <form method="post" action="/faculty/edit-faculty/<%= x.facultyEmailId%>?_method=put" enctype="multipart/form-data">
               
                     <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Faculty Name</label></div>
                       <div class="col"><input type="text" name ="faculty_Name" class="form-control" value="<%=x.facultyName%>" placeholder="Faculty Name" required></div>
                     </div>

                     <div class="mb-3 mt-3 row g-9 align-items-center">  
                        <div class="col col-lg-2"><label class="form-label">Qualifications</label></div>
                        <div class="col"><input type="text" name ="faculty_Qualification" class="form-control" value="<%=x.facultyQualification%>" placeholder="Qualification" required></div>
                      </div>

                      <div class="mb-3 mt-3 row g-9 align-items-center">  
                        <div class="col col-lg-2"><label class="form-label"> Department</label></div>
                        <div class="col"><input type="text" name ="faculty_Department" class="form-control" value="<%=x.facultyDepartment%>" placeholder="Department" required></div>
                      </div>
               
                     <div class="mb-3 mt-3 row g-9 align-items-center">
                       <div class="col col-lg-2"><label class="form-label">Joining Year</label></div>
                       <div class="col"><input type="text" name ="faculty_JoiningYear" class="form-control" value="<%=x.facultyJoiningYear%>" placeholder="Joining Year" required></div>
                     </div>
                     
                     <div class="mb-3 mt-3 row g-9 align-items-center"> 
                       <div class="col col-lg-2"><label class="form-label">Email ID</label></div>
                       <div class="col"><input type="email" name="faculty_EmailId" class="form-control" value="<%=x.facultyEmailId%>" placeholder="abc@gmail.com"></div>
                     </div>
                  
                    </div>
                    <div class="mb-3 mt-3 row g-9 align-items-center"> 
                      <div class="col col-lg-2"><label class="form-label">Photo</label></div>
                      <div class="col"><input type="file" name="faculty_Photo" value="<%=x.facultyPhoto%>" class="form-control" ></div>
                    </div>
                     <div class="mb-5 mt-3 align-items-center text-center"> 
                          <button type="submit" class="btn btn-primary">Submit</button>
                     </div>
                 </form>

            




             </div>

            </div>
         </div>
      </div>
    
<%- include('common/footer.ejs')-%>