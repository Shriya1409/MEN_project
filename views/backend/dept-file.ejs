<%- include('common/head.ejs')-%>

   <title>Admin Panel - Pages</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your contente -->

               <h1>All Pages</h1>
            
               
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Photo</th>
                        <th>Dept URL</th>
                        <th>Navigation</th>
                        <th>Title</th>
                        <th>Dept Heading</th>
                        <th>Dept Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%x.forEach((y)=>{%>
                     <tr>
                        <td>
                          <% if(y.deptPhoto){ %>
                              <img src="/backend/departments/<%= y.deptPhoto%>" width="100">
                          <% } else { %>
                              <img src="/backend/images/no_image.jpg" width="100">
                          <% } %>
                          </td>
                        <td><%= y.deptUrl%></td>
                        <td><%=y.deptNavText%></td>
                        <td><%=y.deptTitle%></td>
                        <td> <%=y.deptHeading%></td>
                        <td> <%=y.deptDetails.slice(0, 10)%></td>
                        
                        <td>  <a class="btn btn-primary" href="/department/edit-department/<%= y.deptUrl%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/department/delete-department/<%= y.deptUrl%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                           </form>
                        </td>
                     </tr>
                     <%x})%>
                    
                  </tbody>
               </table>
                 

                 <center> <br> <a class="btn btn-success btn-md" href="/add-department/">Add More Pages</a> </center>
       

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      