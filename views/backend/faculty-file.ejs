<%- include('common/head.ejs')-%>

   <title>Admin Panel - Faculty</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">
               <center> <br> <a class="btn btn-success btn-md" href="/add-faculty/">Add Faculty</a> </center>
              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your contente -->

               <h1>IT Faculty</h1>
            
               
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Photo</th>
                        <th>Faculty Name</th>
                        <th>Qualification</th>
                        <th>Department</th>
                        <th>Joining Year</th>
                        <th>Email ID</th>
                        <th>Edit</th>
                        <th>Delete</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%navdata.forEach((y)=>{%>
                     <tr>
                        <td>
                          <% if(y.facultyPhoto){ %>
                              <img src="/backend/faculty/<%= y.facultyPhoto%>" width="100">
                          <% } else { %>
                              <img src="/backend/images/no_image.jpg" width="100">
                          <% } %>
                          </td>
                        <td><%= y.facultyName%></td>
                        <td><%=y.facultyQualification%></td>
                        <td><%=y.facultyDepartment%></td>
                        <td> <%=y.facultyJoiningYear%></td>
                        <td> <%=y.facultyEmailId%></td>
                        
                        <td>  <a class="btn btn-primary" href="/faculty/edit-faculty/<%= y.facultyEmailId%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/faculty/delete-faculty/<%= y.facultyEmailId%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                           </form>
                        </td>
                     </tr>
                     <%navdata})%>
                    
                  </tbody>
               </table>



               
                 

                
       

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      