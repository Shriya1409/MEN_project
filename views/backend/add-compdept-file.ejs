<%- include('common/head.ejs')-%>

   <title>Admin Panel - Add Comp Events</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:1700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">
              <div class="dashboard-content-area">

                   <!-- put your contente -->
                   <h1 class="mb-2 mt-2">Add Computer Department Events</h1>
    
                   <form method="post" action="/add-compdepartment" enctype="multipart/form-data">
               
                    <div class="mb-3 mt-3 row g-9 align-items-center">  
                      <div class="col col-lg-2"><label class="form-label">URL</label></div>
                      <div class="col"><input type="text" name ="eventcompdepturl" class="form-control" placeholder="Department Url" required></div>
                    </div>

                    <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Nav Display Text</label></div>
                       <div class="col"><input type="text" name ="eventcompdeptnavtext" class="form-control" placeholder="Navigation Display Text" required></div>
                     </div>

                     <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Page Title</label></div>
                       <div class="col"><input type="text" name ="eventcompdepttitle" class="form-control" placeholder="Department Title" required></div>
                     </div>
                     <div class="mb-3 mt-3 row g-9 align-items-center">
                       <div class="col col-lg-2"><label class="form-label">Navbar</label></div>
                       <div class="col"><textarea rows="10" class="editor form-control Page_Details" id="editor" name="eventcompnav" placeholder="Event Nav"></textarea></div>
                     </div>
                    <div class="mb-3 mt-3 row g-9 align-items-center"> 
                     <div class="col col-lg-2"><label class="form-label">Event Photo</label></div>
                     <div class="col"><input type="file" name="eventcompphoto" class="form-control" placeholder="select image!!" ></div>
                   </div>
                   <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Event Name</label></div>
                       <div class="col"><input type="text" name ="eventcompname" class="form-control" placeholder="Event Title" ></div>
                     </div>

                     <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Event Date</label></div>
                       <div class="col"><input type="date" name ="eventcompdate" class="form-control" placeholder="Event Date" ></div>
                     </div>
                     <div class="mb-3 mt-3 row g-9 align-items-center">  
                       <div class="col col-lg-2"><label class="form-label">Event Resource Person</label></div>
                       <div class="col"><input type="text" name ="eventcompperson" class="form-control" placeholder="Event Resource Person" ></div>
                     </div>
                   <div class="mb-3 mt-3 row g-9 align-items-center">
                     <div class="col col-lg-2"><label class="form-label">Event Description</label></div>
                     <div class="col"><textarea rows="4" class="form-control"  name="eventcompdesc" placeholder="Enter Description"></textarea></div>
                   </div>
               
                     <div class="mb-5 mt-3 align-items-center text-center"> 
                          <button type="submit" class="btn btn-primary">Submit</button>
                     </div>
                 </form>

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      