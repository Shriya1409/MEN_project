<%- include('common/head.ejs')-%>

   <title>Placement Cell - Edit Page</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">



                 <!-- put your contente -->
                 <h1 class="mb-2 mt-2">Edit Page</h1>
    
                 <form method="post" action="/placement/edit-department/<%=x.pageUrl%>?_method=put" enctype="multipart/form-data">
             
                   <div class="mb-3 mt-3 row g-9 align-items-center">  
                     <div class="col col-lg-2"><label class="form-label">URL</label></div>
                     <div class="col"><input type="text" name ="page_Url" class="form-control" value="<%=x.pageUrl%>" placeholder="Page Url" required></div>
                   </div>

                   <div class="mb-3 mt-3 row g-9 align-items-center">  
                      <div class="col col-lg-2"><label class="form-label">Nav Display Text</label></div>
                      <div class="col"><input type="text" name ="page_Nav_Text" class="form-control" value="<%=x.pageNavText%>" placeholder="Navigation Display Text"></div>
                    </div>

                    <div class="mb-3 mt-3 row g-9 align-items-center">  
                      <div class="col col-lg-2"><label class="form-label">Page Title</label></div>
                      <div class="col"><input type="text" name ="page_Title" class="form-control" value="<%=x.pageTitle%>" placeholder="Page Title" required></div>
                    </div>
             
                   <div class="mb-3 mt-3 row g-9 align-items-center">           
                       <div class="col col-lg-2"><label class="form-label">Meta Description</label></div>
                       <div class="col"><input type="text" name ="page_Meta_Description" class="form-control" value="<%=x.pageMetaDescription%>" placeholder="Page Meta Description" ></div>
                   </div>
             
                   <div class="mb-3 mt-3 row g-9 align-items-center">
                     <div class="col col-lg-2"><label class="form-label">Meta Keyword</label></div>
                     <div class="col"><input type="text" name ="page_Meta_Keyword" class="form-control" value="<%=x.pageMetaKeyword%>" placeholder="Page Meta Keyword" ></div>
                   </div>
                   
                   <div class="mb-3 mt-3 row g-9 align-items-center">
                     <div class="col col-lg-2"><label class="form-label">h1</label></div>
                     <div class="col"><input type="text" name ="page_Heading" class="form-control" value="<%=x.pageHeading%>" placeholder="Page Heading" ></div>
                   </div>
                   
                   <div class="mb-3 mt-3 row g-9 align-items-center">
                     <div class="col col-lg-2"><label class="form-label">Photo</label></div>
                     <div class="col"><input type="file" name="page_Photo" class="form-control" ></div>
                   </div>
                   
                   <div class="mb-3 mt-3 row g-9 align-items-center">
                     <div class="col col-lg-2"><label class="form-label">Page Details</label></div>
                     <div class="col"><textarea rows="10" class="editor form-control Page_Details" id="editor" name="page_Details" placeholder="Page Details"><%=x.pageDetails%></textarea></div>
                   </div>
             
                   <div class="mb-5 mt-3 align-items-center text-center"> 
                          <button type="submit" class="btn btn-primary">Push</button>
                   </div>
               </form>

            <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      