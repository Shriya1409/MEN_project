<%- include('common/head.ejs')-%>

   <title>Admin Panel - Records</title>
   </head>
   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your content -->

               <h1>All Records</h1>
            
               
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <th>Student Name</th>
                        <th>Roll No</th>
                        <th>Department</th>
                        <th>Batch Year</th>
                        <th>CGPA</th>
                        <th>Company</th>
                        <th>Sem Num</th>
                        <th>Package</th>
                        <th>Edit</th>
                        <th>Delete</th>
                     </tr>
                  </thead>
                  <tbody>
                     <%x.forEach((y)=>{%>
                     <tr>
                        <td>
                          <% if(y.plcmtPhoto){ %>
                              <img src="/backend/placements/<%= y.plcmtPhoto%>" width="100">
                          <% } else { %>
                              <img src="/backend/placements/no_image.jpg" width="100">
                          <% } %>
                          </td>
                        <td><%= y.StudentName%></td>
                        <td><%=y.RollNo%></td>
                        <td><%=y.Dept%></td>
                        <td> <%=y.BatchYr%></td>
                        <td> <%=y.Cgpa%></td>
                        <td> <%=y.Company%></td>
                        <td> <%=y.SemNo%></td>
                        <td> <%=y.Package%></td>
                        
                        <td>  <a class="btn btn-primary" href="/placement-records/edit-placement-records/<%= y.RollNo%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/placement-records/delete-placement-records/<%= y.RollNo%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                        </td>
                     </tr>
                     <%x})%>
                    
                  </tbody>
               </table>
                 

                 <center> <br> <a class="btn btn-success btn-md" href="/add-placement-records/">Add More Records</a> </center>
       

              <!-- end your content here -->




             </div>

            </div>
         </div>
      </div>
<%- include('common/footer.ejs')-%>
      