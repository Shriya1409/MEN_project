   <body>
    <%- include('common/header.ejs')-%>

      <div class="container-fluid bg-side-nav">
         <div class="row">
            <div class="col-lg-2 sidebaare" style="height:1700px; background-color: black;">

                <%- include('common/sidebar.ejs')-%>

            </div>
            <div class="col-lg-10">

              <div class="dashboard-content-area">
               <%if(success && success != ''){%>
                  <div class="alert alert-success" role="alert">
                     <%= success %> </div>
               <%} else if(err && err != ''){%>
                     <div class="alert alert-danger" role="alert">
                        <%= err %> </div>
                        <%}%>


                 <!-- put your content -->

               <h1>Carousel Images</h1>
               
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                     <tr>
                        <!-- <th>Slider Images</th> -->
                        <th>Photo ID</th>
                        <th>Date</th>
                        <th>Edit</th>
                        <th>Delete</th>
                      
                     </tr>
                  </thead>
                  <tbody>
                     <%navdata.forEach((y)=>{%>
                     <tr>
                        <!-- <td>
                          <% if(y.sliderPhoto){ %>
                              <img src="/backend/carousel-imgs/<%= y.sliderPhoto%>" width="100">
                          <% } else { %>
                              <img src="/backend/images/no_image.jpg" width="100">
                          <% } %>
                          </td> -->
                        <td><%= y.photoId%></td>
                        <td><%= y.datePhoto%></td>
                       
                        
                        <td>  <a class="btn btn-primary" href="/carousel-imgs/edit-carousel-imgs/<%= y.photoId%>">Edit</a>    </td>                  
                        <td>  <form style="display: inline;" action="/carousel-imgs/delete-carousel-imgs/<%= y.photoId%>?_method=DELETE" method="POST">
                              <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                           </form>
                        </td>
                     </tr>
                     <%navdata})%>
                    
                  </tbody>
              </table>
            

