<!doctype html>
<html lang="en">
  <head>
    <%- include('common/head.ejs')-%>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
    <title><%=p.eventdepttitle%></title>
    
  </head>
  <body>
    
    <%- include('common/header.ejs')-%>

 
  
      <div class="container" style="width:1100px;">
        <%-p.eventnav%>
  <!-- navbar -->
  <h2>ETC EVENTS</h2>
        <div class="event-page" style="background-color:#fff; border:2px solid black;">

 
   
        <div class="event-card" style="display:flex; color: white; margin-top:5px; margin-bottom:5px;">
                <div class="event-img" style="float:left; position: relative; left: 10px;">
                    <img style="size:100px; height: 200px; width:300px; padding:10px;" src="/backend/events/<%=p.eventphoto%>">
                </div>
                <div class="event-details" style="float:right; position: relative; margin-top:auto; margin-bottom:auto;left: 100px; color: black;">  
                    <div style="padding:5px;">Event Name: <%=p.eventname %> </div>  
                    <div style="padding:5px;"> Event Date: <%=p.eventdate %></div>
                    <div style="padding:5px;"> Resource Person: <%=p.eventperson %></div>
                    <div style="padding:5px;"> About:  <%=p.eventdesc %> </div>   
                </div>

        </div>

     
    </div>

 
</div>
<%- include('common/footer.ejs')-%>
    </body>
</html>